<view class="cu-custom" style="background:#2f70df;height:{{CustomBar}}px">
	<view class="cu-bar fixed {{bgImage!=''?'none-bg text-white bg-img':''}} {{bgColor}}"
		style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;{{bgImage?'background-image:url(' + bgImage+')':''}}">
		<cu-custom isBack="{{true}}">
			<view slot="backText">商品列表</view>
			<!-- <view slot="content">商品列表</view> -->
		</cu-custom>
	</view>
</view>


<view class="cu-bar search bg-white" data-id="id_search">
	<view class="search-form radius">
		<text class="cuIcon-search"></text>
		<input type="text" value="{{name}}" bindinput='search' placeholder="寻找宝贝、店铺" confirm-type="search"
			bindconfirm="searchOnclick"></input>
		<text hidden="{{clearSearch}}" bindtap='clearTap' class="cuIcon-roundclosefill"></text>
	</view>
	<view class="action">
		<view class="text-red">搜索</view>
	</view>
</view>

<view class="cu-bar search bg-white cu-form-group" hidden="{{navshow}}">
	<scroll-view scroll-x class="bg-white nav">
		<view class="flex text-center">
			<view class="cu-item flex-sub {{index==TabCur?'text-orange':''}}" wx:for="{{orderList}}" wx:key
				bindtap="tabSelect" data-index="{{index}}">
				{{item.name}}
			</view>
		</view>
	</scroll-view>
</view>

<scroll-view scroll-y bindscrolltolower="scrollBottomEvent" style="height:{{deviceH-100-64}}px">
	<view class="cu-card article {{isCard?'no-card':''}}">
		<view class="cu-item shadow" wx:for="{{5}}" wx:key>
			<view class="title">
				<view class='height15'></view>
			</view>
			<view class="content" bindtap='spClick'>
				<image mode="aspectFill" style="  height: 250rpx;width: 250rpx;" bindtap='spClick' data-id='{{item.id}}'
					data-shopId='{{item.shopId}}' data-shopName='{{item.shopName}}'
					src="https://ss0.bdstatic.com/70cFvHSh_Q1YnxGkpoWK1HF6hhy/it/u=3454967093,1824291965&fm=26&gp=0.jpg"></image>
				<view class="desc">
					<view data-id='{{item.id}}' data-shopId='{{item.shopId}}' data-shopName='{{item.shopName}}' class="name">
						德国华麦斯 家用工具箱套装五金工具套装多功能家庭电工木工电讯维修工具组合套装 豪华工具套装(升级加强版)</view>
					<view bindtap='spClick' data-id='{{item.id}}' data-shopId='{{item.shopId}}' data-shopName='{{item.shopName}}'
						class="flex align-center justify-between">
						<view>
							<text class="text-xl text-price text-red">99.99</text>
							<text class="margin-lr-xs text-price text-grey" style="text-decoration:line-through">100</text>
						</view>

						<text class="cuIcon-cart text-red" style="font-size:25px"></text>
					</view>
				</view>
			</view>
		</view>
	</view>
	<view class="flex align-center padding justify-center">
		<view class=' bg-grey' style="width: 200rpx;height: 1rpx;"></view>
		<view class="margin-lr-sm text-grey">我是有底线的</view>
		<view class=' bg-grey' style="width: 200rpx;height: 1rpx;"></view>
	</view>
</scroll-view>