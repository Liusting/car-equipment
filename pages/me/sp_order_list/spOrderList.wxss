  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin: 5rpx;
  color: black;
}

.shop_type {
  margin: 10rpx;
  display: block;
