<view class="cu-bar foot  bg-white padding-xs" style="border-top: 1px solid #f1f1f1" wx:if="{{trade_status==1}}">
	<view></view>
	<view class="productbtn">
		<button style="float:right;margin-right:20rpx;" class="cu-btn line-red round">付款</button>
		<button style="float:right;margin-right:20rpx;" class="cu-btn line-info round" data-id="{{item.id}}" bindtap="cancelOrder">取消订单 </button>
	</view>
</view>
<view class="cu-bar foot bg-white padding-xs" style="border-top: 1px solid #f1f1f1" wx:if="{{trade_status==2}}">
	<view></view>
	<view class="productbtn">
		<button style="float:right;margin-right:20rpx;" class="cu-btn line-red round">立即分享</button>
	</view>
</view>
<view class="cu-bar foot bg-white padding-xs" style="border-top: 1px solid #f1f1f1" wx:if="{{trade_status==3}}">
	<view></view>
	<view class="productbtn">
		<button style="float:right;margin-right:20rpx;" class="cu-btn line-red round">查看物流</button>
	</view>
</view>
<view class="cu-bar foot bg-white padding-xs" style="border-top: 1px solid #f1f1f1" wx:if="{{trade_status==4}}">
	<view></view>
	<view class="productbtn" wx:if="{{trade_status==4}}">
		<button style="float:right;margin-right:20rpx;" class="cu-btn line-red round">查看物流</button>
	</view>
</view>
<view class="cu-bar foot bg-white padding-xs" style="border-top: 1px solid #f1f1f1" wx:if="{{trade_status==5}}">
	<view></view>
	<view class="productbtn">
		<button style="float:right;margin-right:20rpx;" bindtap="appraise" data-id="{{items.id}}" class="cu-btn line-red round">评价</button>
		<button style="float:right;margin-right:20rpx;" class="cu-btn line-info round" data-id="{{items.id}}" bindtap="cancelOrder">申请售后</button>
	</view>
</view>