					<view class="text-gray margin-top-sm text-sm">经典款</view>
					<view class="cu-bar">
						<text class="text-price text-red" >1229</text>
						<text >x1</text>
					</view>
				</view>
			</view>
		</view>

	</view>
	<view class=" bg-white">
		<view class="padding-xs">
			<text class="text-sm text-gray">商品总价</text>
			<text class="text-sm text-gray text-price" style="float:right">26.00</text>
		</view>
		<view class="padding-xs">
			<text class="text-sm text-gray">运费(快递)</text>
			<text class="text-sm text-gray text-price" style="float:right">0.00</text>
		</view>
		<view class="padding-xs">
			<text class="text-sm text-gray">优惠券券抵扣</text>
			<text class="text-sm text-gray" style="float:right">- <text class="text-sm text-gray text-price">0.00</text></text>
		</view>
		<view class="padding-xs" style="  border-bottom: 1px solid #f1f1f1;">
			<text>订单总价</text>
			<text class="text-price" style="float:right">26.00</text>
		</view>
		<view class="padding-xs">
			<text>需付款</text>
			<text class="text-price text-red" style="float:right">26.00</text>
		</view>
	</view>

	<view class="margin-top bg-white">
		<view class="padding-sm">
			<text><text class=" cuIcon-titles text-orange"></text>订单信息</text>
		</view>
		<view class="padding-sm">
			<text class="text-sm text-gray">商城积分：</text>
			<text class="text-sm text-gray margin-left" >获得100积分</text>
		</view>
		<view class="padding-sm">
			<text class="text-sm text-gray">订单编号：</text>
			<text class="text-sm text-gray margin-left" >3463867637862764322</text>
		</view>
		<view class="padding-sm">
			<text class="text-sm text-gray">买家留言：</text>
			<text class="text-sm text-gray margin-left" >发顺丰快递</text>
		</view>
		<view class="padding-sm">
			<text class="text-sm text-gray">创建时间：</text>
			<text class="text-sm text-gray margin-left" >2019-10-16 09:52:44</text>
		</view>
		<view class="padding-sm" >
			<text class="text-sm text-gray">支付方式：</text>
			<text class="text-sm text-gray margin-left" >微信支付</text>
		</view>
	</view>
	<view class="cu-bar foot flex-sub text-center text-xl padding-sm  margin-top-sm bg-orange">
			<button bindtap="chat" class="flex-sub bg-orange kf-button"><text class=" cuIcon-weixin"></text>客服</button>
